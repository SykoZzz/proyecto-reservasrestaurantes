@model IEnumerable<appReservas.Models.Reserva>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Mis Reservas";
}

@if (!SignInManager.IsSignedIn(User))
{
    <script>
        // üîí Redirige al login si el usuario no est√° autenticado
        window.location.href = '/Identity/Account/Login';
    </script>
}

<!-- üîù Barra de navegaci√≥n -->
<nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#BA965A;">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/" style="color:white;">üçΩÔ∏è Mesa Lista</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link fw-semibold" asp-controller="Restaurantes" asp-action="Index">Restaurantes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-semibold active" asp-controller="Reservas" asp-action="Index">Mis Reservas</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="btn btn-sm btn-outline-light ms-3">Cerrar sesi√≥n</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-sm btn-outline-light ms-3" href="/Identity/Account/Login">Iniciar sesi√≥n</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- üåÜ Fondo principal -->
<div style="background-color:#F5E9E3; min-height:100vh; padding-top:60px;">
    <div class="container py-5">

        <!-- ‚ö° Contenedor de notificaciones -->
        <div id="toastContainer" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;"></div>

        @if (TempData["ErrorMessage"] != null)
        {
            <script>
                showToast("@TempData["ErrorMessage"]", "danger");
            </script>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <script>
                showToast("@TempData["SuccessMessage"]", "success");
            </script>
        }

        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h2 class="fw-bold mb-4 text-center" style="color:#3E2723;">
                Mis <span style="color:#BA965A;">Reservas</span>
            </h2>

            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-4">
                    <p class="fw-semibold mb-3" style="color:#5D4037;">A√∫n no tienes reservas registradas. üç¥</p>
                    <a asp-controller="Restaurantes" asp-action="Index" class="btn btn-warning fw-bold rounded-3 px-4">
                        üçΩÔ∏è Explorar Restaurantes
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle text-center shadow-sm rounded-3 overflow-hidden">
                        <thead style="background-color:#BA965A; color:white;">
                            <tr>
                                <th>Cliente</th>
                                <th>Restaurante</th>
                                <th>Fecha</th>
                                <th>Personas</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="background-color:#fff;">
                                    <td class="fw-semibold" style="color:#5D4037;">@item.NombreCliente</td>
                                    <td>@item.Restaurante?.Nombre</td>
                                    <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.Personas</td>
                                    <td>
                                        <a asp-action="Cancel" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger rounded-3 shadow-sm fw-semibold"
                                           onclick="return confirm('¬øSeguro que deseas cancelar esta reserva?');">
                                            ‚ùå Cancelar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th { letter-spacing: 0.5px; }
    .btn-warning { background-color: #BA965A; border: none; }
    .btn-warning:hover { background-color: #a17845; }
    .btn-danger:hover { background-color: #c0392b; }
</style>

@section Scripts{
<script>
    function showToast(message, type) {
        const container = document.getElementById('toastContainer');
        const toast = document.createElement('div');
        toast.className = `toast align-items-center text-white bg-${type} border-0`;
        toast.role = "alert";
        toast.ariaLive = "assertive";
        toast.ariaAtomic = "true";
        toast.innerHTML = `
            <div class="d-flex">
                <div class="toast-body">${message}</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        `;
        container.appendChild(toast);
        const bsToast = new bootstrap.Toast(toast, { delay: 3000 });
        bsToast.show();
    }
</script>
}
