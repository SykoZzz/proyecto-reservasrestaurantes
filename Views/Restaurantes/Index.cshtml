@model IEnumerable<appReservas.Models.Restaurante>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Restaurantes";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<div class="container py-5">
    <!-- Mensajes de √©xito/error -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

<h2 class="fw-bold text-center mb-4 text-dark">
    üí° Recomendaciones <span class="text-warning">para ti</span>
</h2>

<div id="recomendaciones-container" class="card shadow-sm border-0 rounded-4 mb-5 p-4 bg-light">
    <p class="text-muted text-center mb-3">
        Basado en tus preferencias y reservas anteriores üçΩÔ∏è
    </p>

    <div class="text-center mb-3">
        <button id="btn-cargar" class="btn btn-warning fw-semibold px-4 py-2 rounded-pill shadow-sm">
            Mostrar mis recomendaciones
        </button>
    </div>

    <div id="recomendaciones-result" class="mt-4">
        <!-- Aqu√≠ se cargar√° el partial -->
    </div>

    <p class="text-center text-secondary small mt-4">
        Si no ves recomendaciones, aseg√∫rate de haber iniciado sesi√≥n y de tener reservas anteriores.
    </p>
</div>

    <h2 class="fw-bold text-center mb-5 text-dark">
        üçΩ Restaurantes <span class="text-warning">Disponibles</span>
    </h2>
    
    


    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item list-group-item-action mb-3 p-0 shadow-sm rounded-4">
                <div class="row g-0 align-items-center">
                    <!-- Imagen -->
                    <div class="col-md-4">
                        <img src="@item.ImagenUrl" class="img-fluid rounded-start h-100" style="object-fit:cover;">
                    </div>

                    <!-- Informaci√≥n -->
                    <div class="col-md-8 p-4 d-flex flex-column">
                        <h5 class="fw-bold mb-2">@item.Nombre</h5>
                        <p class="mb-1"><i class="fa-solid fa-utensils me-2"></i>@item.Tipo</p>
                        <p class="mb-1"><i class="fa-solid fa-location-dot me-2"></i>@item.Direccion - @item.Distrito</p>
                        <p class="mb-1"><i class="fa-solid fa-dollar-sign me-2"></i>S/. @item.PrecioPromedio</p>
                        <p class="mb-3"><i class="fa-solid fa-star me-2"></i>@item.Rating</p>

                        <div class="d-flex gap-2 mt-auto">
                            <!-- Bot√≥n Detalles -->
                            <a href="@Url.Action("Details", "Restaurantes", new { id = item.Id })"
                               class="btn btn-warning fw-semibold">
                                üîé Ver Detalles
                            </a>

                            <!-- Bot√≥n Reservar / Login -->
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-controller="Reservas"
                                   asp-action="Create"
                                   asp-route-restauranteId="@item.Id"
                                   class="btn btn-success fw-semibold">
                                    üçΩ Reservar
                                </a>
                            }
                            else
                            {
                                <a href="/Identity/Account/Login" class="btn btn-outline-secondary fw-semibold">
                                    üîê Inicia sesi√≥n para reservar
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .list-group-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        transition: 0.3s;
    }

    .btn-warning:hover {
        background-color: #c7913e;
    }

    .btn-success {
        background-color: #198754;
        border: none;
    }

    .btn-success:hover {
        background-color: #157347;
    }
</style>
@section Scripts {
<script>
    document.getElementById('btn-cargar').addEventListener('click', async () => {
        const container = document.getElementById('recomendaciones-result');
        container.innerHTML = '<p>Cargando...</p>';
        try {
            const res = await fetch('/Recomendaciones/MostrarParaUsuario');
            if (!res.ok) throw new Error('Error al obtener recomendaciones');
            const html = await res.text();
            container.innerHTML = html;
        } catch (err) {
            container.innerHTML = '<p>No se pudieron cargar recomendaciones. Inicie sesi√≥n para ver o haga su primera reserva.</p>';
        }
    });
</script>
}