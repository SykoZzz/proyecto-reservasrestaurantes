@model IEnumerable<Restaurante>

@{
    ViewData["Title"] = "Restaurantes";
}

<h2 class="mb-4 text-center">üçΩ Restaurantes Disponibles</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg h-100">
                <img src="@item.ImagenUrl" class="card-img-top" alt="@item.Nombre" style="height:200px; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">
                        <strong>Tipo:</strong> @item.Tipo <br />
                        <strong>Direcci√≥n:</strong> @item.Direccion - @item.Distrito <br />
                        <strong>Precio Promedio:</strong> S/. @item.PrecioPromedio <br />
                        <strong>Rating:</strong> ‚≠ê @item.Rating
                    </p>
                    <a href="@Url.Action("Details", "Restaurantes", new { id = item.Id })" class="btn btn-primary w-100">
                        Ver Detalles
                    </a>
                </div>
            </div>
        </div>
    }
</div>
