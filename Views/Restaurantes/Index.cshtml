@model IEnumerable<Restaurante>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Restaurantes";
}

<div class="container py-5">
    <h2 class="fw-bold text-center mb-5 text-dark">
        üçΩ Restaurantes <span class="text-warning">Disponibles</span>
    </h2>

    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item list-group-item-action mb-3 p-0 shadow-sm rounded-4">
                <div class="row g-0 align-items-center">
                    <!-- Imagen -->
                    <div class="col-md-4">
                        <img src="@item.ImagenUrl" class="img-fluid rounded-start h-100" style="object-fit:cover;">
                    </div>

                    <!-- Informaci√≥n -->
                    <div class="col-md-8 p-4 d-flex flex-column">
                        <h5 class="fw-bold mb-2">@item.Nombre</h5>
                        <p class="mb-1"><i class="fa-solid fa-utensils me-2"></i>@item.Tipo</p>
                        <p class="mb-1"><i class="fa-solid fa-location-dot me-2"></i>@item.Direccion - @item.Distrito</p>
                        <p class="mb-1"><i class="fa-solid fa-dollar-sign me-2"></i>S/. @item.PrecioPromedio</p>
                        <p class="mb-3"><i class="fa-solid fa-star me-2"></i>@item.Rating</p>

                        <a href="@Url.Action("Details", "Restaurantes", new { id = item.Id })" 
                           class="btn btn-warning mt-auto align-self-start">
                            üîé Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .list-group-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        transition: 0.3s;
    }

    .btn-warning:hover {
        background-color: #c7913e;
    }
</style>