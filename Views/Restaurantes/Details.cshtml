@model Restaurante

@{
    ViewData["Title"] = "Detalles";
}

<!-- Barra de navegaci√≥n -->
<nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#BA965A;">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/" style="color:white;">
            üçΩÔ∏è Mesa Lista
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link fw-semibold active" asp-controller="Restaurantes" asp-action="Index">Restaurantes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-semibold" asp-controller="Reservas" asp-action="Index">Mis Reservas</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Fondo principal -->
<div style="background-color:#F5E9E3; min-height:100vh; padding-top:60px;">
    <div class="container py-5">
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <div class="row g-4 align-items-center">
                <!-- Imagen -->
                <div class="col-md-6 text-center">
                    <img src="@Model.ImagenUrl" 
                         class="img-fluid rounded-4 shadow-lg" 
                         alt="@Model.Nombre" 
                         style="max-height:350px; object-fit:cover;" />
                </div>

                <!-- Informaci√≥n -->
                <div class="col-md-6">
                    <h2 class="fw-bold mb-3" style="color:#3E2723;">@Model.Nombre</h2>
                    <p><strong>üçΩÔ∏è Tipo:</strong> @Model.Tipo</p>
                    <p><strong>üìç Direcci√≥n:</strong> @Model.Direccion - @Model.Distrito</p>
                    <p><strong>üí∞ Precio Promedio:</strong> S/. @Model.PrecioPromedio</p>
                    <p><strong>‚≠ê Rating:</strong> @Model.Rating</p>

                    <!-- Botones -->
                    <div class="mt-4">
                        <a class="btn px-4 py-2 shadow-lg fw-semibold me-2" 
                           style="background-color:#BA965A; color:white; border-radius:12px; transition:0.3s;" 
                           href="@Url.Action("Create", "Reservas", new { restauranteId = Model.Id })"
                           onmouseover="this.style.backgroundColor='#8C6B3F'" 
                           onmouseout="this.style.backgroundColor='#BA965A'">
                            üìÖ Reservar Mesa
                        </a>

                        <a class="btn px-4 py-2 shadow-lg fw-semibold" 
                           style="background-color:#3E2723; color:white; border-radius:12px; transition:0.3s;" 
                           href="@Url.Action("Index", "Restaurantes")"
                           onmouseover="this.style.backgroundColor='#5D4037'" 
                           onmouseout="this.style.backgroundColor='#3E2723'">
                            ‚¨ÖÔ∏è Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
