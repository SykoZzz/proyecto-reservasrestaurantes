@model List<appReservas.Models.Restaurante>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center mt-3">
        No hay recomendaciones disponibles por ahora üçΩÔ∏è
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var r in Model.Take(3))
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <img src="@r.ImagenUrl" alt="@r.Nombre" class="card-img-top rounded-top-4" 
                         style="height: 180px; object-fit: cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold text-dark">@r.Nombre</h5>
                        <p class="text-muted mb-1"><i class="fa-solid fa-utensils me-2"></i>@r.Tipo</p>
                        <p class="text-muted mb-1"><i class="fa-solid fa-location-dot me-2"></i>@r.Distrito</p>
                        <p class="text-muted mb-1"><i class="fa-solid fa-dollar-sign me-2"></i>@r.PrecioPromedio.ToString("C")</p>
                        <p class="text-warning mb-3"><i class="fa-solid fa-star me-2"></i>@r.Rating</p>

                        <a class="btn btn-warning fw-semibold mt-auto w-100" 
                           href="/Restaurantes/Details/@r.Id">
                            üîé Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
<style>
.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.card-body h5 {
    font-size: 1.1rem;
}

.btn-warning {
    background-color: #f7b733;
    border: none;
}

.btn-warning:hover {
    background-color: #e5a12f;
}

</style>