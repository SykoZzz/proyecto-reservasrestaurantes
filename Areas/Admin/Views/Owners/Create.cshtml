@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model appReservas.Areas.Admin.Models.CreateOwnerVM
<div class="container mt-4">
    <h3>Crear dueño</h3>
    <form method="post" asp-area="Admin" asp-controller="Owners" asp-action="Create">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RestauranteId" class="form-label">Asignar restaurante (opcional)</label>
            <select asp-for="RestauranteId" asp-items="Model.Restaurantes" class="form-select">
                <option value="">— Sin asignar —</option>
            </select>
        </div>

        <button class="btn btn-primary">Crear</button>
        <a asp-area="Admin" asp-controller="Owners" asp-action="Index" class="btn btn-link">Volver</a>
    </form>
</div>

@section Scripts{ <partial name="_ValidationScriptsPartial" /> }
