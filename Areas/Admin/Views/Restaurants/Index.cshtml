@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<appReservas.Models.Restaurante>
<div class="container mt-4">
    <h3>Restaurantes</h3>
    @if (TempData["ok"] is string ok) { <div class="alert alert-success">@ok</div> }
    <a asp-area="Admin" asp-controller="Restaurants" asp-action="Create" class="btn btn-primary btn-sm mb-3">Nuevo</a>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr><th>Nombre</th><th>Tipo</th><th>Distrito</th><th>Rating</th><th></th></tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Nombre</td>
                    <td>@r.Tipo</td>
                    <td>@r.Distrito</td>
                    <td>@r.Rating</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Restaurants" asp-action="Edit" asp-route-id="@r.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
